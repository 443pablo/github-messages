{
    "name": "Github Messages",
    "description": "A messaging system for Github. Message anyone on GitHub with ease with a native user interface.",
    "version": "0.0.2",
    "manifest_version": 3,
    "action": {
        "default_icon": "./icons/black/16.png"
    },
    "icons": {
        "16": "icons/black/16.png",
        "32": "icons/black/32.png",
        "64": "icons/black/64.png",
        "128": "icons/black/128.png"
    },
    "host_permissions": [
        "https://github.com/*"
    ],
    "background": {
        "service_worker": "dist/background.js",
        "type": "module"
    },
    "omnibox": {"keyword": "gh" },
    "content_scripts": [
        {
            "matches": ["https://github.com/messages","https://github.com/messages/*", "https://github.com/messages*"],
            "js": ["dist/hideLoad.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["https://github.com/*"],
            "js": ["dist/index.js"],
            "css": ["dist/index.css"]
        }
    ]
}