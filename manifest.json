{
    "name": "Github Messages",
    "description": "A messaging system for Github",
    "version": "0.0.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "./comment-16.png"
    },
    "icons": {
        "16": "./comment-16.png",
        "24": "./comment-24.png"
    },
    "content_scripts": [
        {
            "matches": ["https://github.com/*"],
            "js": ["dist/index.js"]
        }
    ]
}